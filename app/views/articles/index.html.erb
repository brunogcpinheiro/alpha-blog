<div class="container">
  <h1>List of Articles!</h1>
  <h3><%= link_to "Create new article", new_article_path %></h3>
  <table>
    <tr>
      <legend>
        <th>Title</th>
        <th>Description</th>
      </legend>
    </tr>
    <% @articles.each do |article| %> 
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-xs btn-info", :style => "margin: 15px;" %></td>
          <td><%= link_to 'Show', article_path(article), class: "btn btn-xs btn-warning" %></td>
        </tr>
    <% end %>
  </table>
</div>