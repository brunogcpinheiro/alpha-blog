<h2 align="center"><span class="title">Title:</span> <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="text-center description">
    <span class="title">Description:</span>
  </h4>
    <%= simple_format(@article.description) %>
   <div class="article-actions">
     <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary" %>
     <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
     <%= link_to "View all articles", articles_path, class: "btn btn-warning" %>
   </div>
</div>


