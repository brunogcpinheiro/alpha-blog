<div class="container">
  <h1>Edit existing Article!</h1>
  
  <% if @article.errors.any? %>
  <h2>This errors prevented the article from getting created</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_for @article do |f| %>
    <p>
      <%= f.label :title %> </br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %> <br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit nil, :class => "btn btn-success" %>
    </p>
  
  <% end %>
  
  <%= link_to "Back to articles list", articles_path, class: "btn btn-danger" %>
</div>
